# abort script on any command that exits with a non zero value
set -e

# abort script on any command that exits with a non zero value
set -e
echo "Extracting apache MyMessage rabbitmq..."
tar xzf MyMessage/rabbitmq-server-generic-unix-3.6.6.tar.xz

echo "Building rabbitmq..."
(
    cd MyMessage
    ./configure \
    --prefix=${BOSH_INSTALL_TARGET} \
    --enable-so
    make
    make install
)